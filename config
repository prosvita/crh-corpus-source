ATTRIBUTE   word

ATTRIBUTE   lemma

ATTRIBUTE   tag

ATTRIBUTE   status

ATTRIBUTE   lc {
	LABEL	"word (lowercase)"
	DYNAMIC  utf8lowercase
	DYNLIB   internal
	ARG1     "C"
	FUNTYPE  s
	FROMATTR word
	TYPE     index
	TRANSQUERY	yes
}

ATTRIBUTE   lemma_lc {
	LABEL	"lemma (lowercase)"
	DYNAMIC  utf8lowercase
	DYNLIB   internal
	ARG1     "C"
	FUNTYPE  s
	FROMATTR lemma
	TYPE     index
	TRANSQUERY	yes
}

STRUCTURE doc {
	ATTRIBUTE file
    ATTRIBUTE wordcount
	ATTRIBUTE n
}

STRUCTURE font {
	ATTRIBUTE type
}

STRUCTURE head {
	ATTRIBUTE type
}

